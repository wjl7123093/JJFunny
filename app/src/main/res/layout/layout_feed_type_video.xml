<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="feed"
            type="Feed" />

        <import type="com.snowapp.jjfunny.model.Feed" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white">

        <include
            layout="@layout/layout_feed_author"
            app:user="@{feed.author}" />

        <include
            layout="@layout/layout_feed_text"
            app:lines="@{3}"
            app:feedText="@{feed.feeds_text}"/>

        <!-- 视频区域 -->
        <com.snowapp.jjfunny.view.ListPlayerView
            android:id="@+id/list_player_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"/>

        <include
            layout="@layout/layout_feed_tag"
            app:tagText="@{feed.activityText}"/>

        <!--<include
            layout="@layout/layout_top_comment"
            app:comment="@{feed.topComment}"/>-->

        <include
            layout="@layout/layout_feed_interaction"
            app:feed="@{feed}"/>

    </LinearLayout>
</layout>